
<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<% if @task.completed == true %>
      <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" checked> <span>Task is completed</span>
    <% else %>
      <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault"> <span>Task is not completed</span>
    <% end %>
<br>
<%= link_to "Back to list", tasks_path%>
<%= link_to "Edit this task", edit_path%>
